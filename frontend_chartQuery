  <style>
    .chart-card {
      display: inline-block;
      width: 250px;
      margin: 20px;
      text-align: center;
    }
    .chart-container {
      position: relative;
      width: 200px;
      height: 200px;
      margin: auto;
    }
    .chart-center {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      pointer-events: none;
    }
    .center-value {
      font-size: 20px;
      font-weight: bold;
    }
    .center-label {
      font-size: 12px;
      color: #666;
    }
    .chart-legend {
      margin-top: 10px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    .legend-item {
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .legend-color {
      width: 12px;
      height: 12px;
      border-radius: 50%;
    }
